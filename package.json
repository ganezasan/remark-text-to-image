{
  "name": "remark-html-emoji-image",
  "version": "0.1.0",
  "description": "Transform emoji unicodes into html images",
  "license": "MIT",
  "keywords": [
    "html",
    "emoji",
    "image"
  ],
  "dependencies": {
    "gemoji": "^4.0.0",
    "unist-util-visit": "^1.0.0"
  },
  "repository": "jackycute/remark-html-emoji-image",
  "author": "jackycute",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^14.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "remark": "^7.0.0",
    "remark-cli": "^3.0.0",
    "remark-html": "^6.0.0",
    "remark-preset-wooorm": "^2.0.0",
    "tape": "^4.0.0",
    "xo": "^0.17.1"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify index.js --no-builtins -s htmlEmojiImage > remark-html-emoji-image.js",
    "build-mangle": "esmangle remark-html-emoji-image.js > remark-html-emoji-image.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test.js",
    "test-coverage": "istanbul cover test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
